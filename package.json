{
  "name": "plum",
  "displayName": "plum",
  "version": "2.0.0",
  "description": "Accelerate your web personalization with PLUM's VSCode extension, a mixin toolset powered by SASS ðŸ©·",
  "publisher": "Raja Rakotonirina <raja.rakoto7@gmail.com>",
  "license": "MIT",
  "icon": "./assets/plum-gray.png",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RajaRakoto/plum-extension.git"
  },
  "bugs": "https://github.com/RajaRakoto/plum-extension/issues",
  "files": [
    "dist"
  ],
  "keywords": [
    "plum",
    "extension",
    "vscode",
    "snippets",
    "css",
    "sass",
    "collection",
    "mixins",
    "toolkit",
    "scss",
    "styles"
  ],
  "engines": {
    "vscode": "^1.39.0"
  },
  "categories": [
    "Snippets"
  ],
  "scripts": {
    "es6": "bun es6.js",
    "clean": "rimraf build dist coverage",
    "build": "bun run clean && bun build.js && vsce package && mv plum-*.vsix dist",
    "prettier": "prettier --config .prettierrc --write .",
    "backup": "grunt backup",
    "pkg-check": "depcheck",
    "pkg-upgrade": "ncu --interactive --format group --packageManager bun",
    "versioning": "ungit",
    "npm-version:major": "npm version major",
    "npm-version:minor": "npm version minor",
    "npm-version:patch": "npm version patch"
  },
  "contributes": {
    "snippets": [
      {
        "language": "scss",
        "path": "./dist/plum.code-snippets"
      }
    ]
  },
  "devDependencies": {
    "depcheck": "^1.4.7",
    "grunt": "^1.6.1",
    "grunt-contrib-compress": "^2.0.0",
    "load-grunt-tasks": "^5.1.0",
    "npm-check-updates": "^16.14.15",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5"
  }
}
